<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backkground_shape"
    android:orientation="vertical"
    tools:context=".ui.Signup">

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_meduim"
        android:gravity="center"
        android:text="Sign up"
        android:textColor="#D6D5D5"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="@font/nunito_bold"
        android:text="Create Your Account!"
        android:textColor="#D6D5D5"
        android:textSize="24sp" />
    <TextView
        android:id="@+id/signup_fullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="15dp"
        android:fontFamily="@font/nunito_bold"
        android:text="Full Name"
        android:textColor="#D6D5D5"
        android:textSize="18sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/signup_yourname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint=" "

        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_shape"

        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/signup_yourname2"
            android:layout_width="match_parent"
            android:hint="Your name"
            android:textColorHint="#5B5A60"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:background="@drawable/edit_text_shape"
            android:layout_marginStart="15dp"

            android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/signup_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="@font/nunito_bold"
        android:text="E_mail"
        android:textColor="#D6D5D5"
        android:textSize="18sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/signup_youremail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint=" "
        android:layout_marginTop="-10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edit_text_shape"

        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/signup_youremail2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="E-mail"
            android:textColorHint="#5B5A60"
            android:textColor="@color/white"
            android:background="@drawable/edit_text_shape"
            android:layout_marginStart="15dp"

            android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/signup_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="@font/nunito_bold"
        android:text="Password"
        android:textColor="#D6D5D5"
        android:textSize="18sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/signup_yourpassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="-10dp"
        android:hint=" "
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edit_text_shape"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/signup_yourpassword2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:hint="Password"
            android:textColorHint="#5B5A60"
            android:background="@drawable/edit_text_shape"
            android:layout_marginStart="15dp"

            android:inputType="text|textPassword" />

    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/signup_confirmpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="@font/nunito_bold"
        android:text="Confirm Password"
        android:textColor="#D6D5D5"
        android:textSize="18sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/signup_yourconfirmpassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="-10dp"
        android:hint=" "
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edit_text_shape"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/signup_yourconfirmpassword2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:hint="Confirm password"
            android:textColorHint="#5B5A60"
            android:background="@drawable/edit_text_shape"
            android:layout_marginStart="15dp"
            android:inputType="text|textPassword" />

    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="100dp"
            android:layout_height="80dp"

            android:src="@drawable/h_line_100" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:fontFamily="@font/nunito_meduim"
            android:text="or continue with"
            android:textColor="#D6D5D5"
            android:textSize="19sp" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="80dp"

            android:src="@drawable/h_line_100" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="-20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_marginRight="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/facebook" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/google" />
    </LinearLayout>
    <Button
        android:id="@+id/signup_button_signup"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="17dp"
        android:background="@drawable/btn_shabe"
        android:fontFamily="@font/nunito_bold"
        android:gravity="center"
        android:text="Sign up"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/signup_tv_signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/nunito_bold"
        android:gravity="center"
        android:text="Already have an account? Sign in"
        android:textColor="#D6D5D5"
        android:textSize="18sp" />

</LinearLayout>